<%if current_user.admin?%>
<h1>Manage Calendars</h1>
<%else%>
<h1>My Pet Calendar</h1>
<%end%>

<table id = "index-agenda">
  <tr>
    <th>Pet</th>
    <th>Start Day</th>
    <th>End Day</th>
    <th>Cost</th>
    <th>Care Needs</th>
  </tr>
  	<% @agendas.each do |agenda|  %>
    <tr>
	 <td><%= agenda.pet.name %></td>
	 <td><%= agenda.start_day.strftime('%F') %></td>
	 <td><%= agenda.end_day.strftime('%F') %></td>
	 <td><%= agenda.total_payment %></td>
	 <td><%= agenda.care_needs %></td>

	 <td><%= link_to "Edit", edit_agenda_path(agenda), class: 'button', id: 'agenda-index-button' %></td>

   <td><%= link_to "View", agenda_path(agenda), class: 'button', id: 'agenda-index-button' %></td>

	 <td><%= link_to "Delete", agenda_path(agenda), method: :delete, data: { confirm: 'Are you sure you want to delete this post?' }, class: 'button', id: 'agenda-index-button' %></td>

    <td><%unless agenda.user == nil%>
      <%= link_to "View Confirmation", agendas_confirmation_path(agenda), class: 'button', id: 'agenda-index-confimation' %>
    <%end%></td>
    
    </tr>
  	<% end %>


</table>