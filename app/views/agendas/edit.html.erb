<h1>Edit Agenda</h1>

<h4><b>Name:</b> <%= @agenda.pet.name %></h4>

<%= form_for(@agenda) do |f| %>
	
	<div class="field">
        <h2><%= f.label :start_day %><br></h2>
        <%= f.date_field :start_day %>
    </div>

    <div class="field">
        <h2><%= f.label :end_day %><br></h2>
        <%= f.date_field :end_day %>
    </div>

    <div class="field">
        <h2><%= f.label :total_payment %><br></h2>
        <%= f.number_field :total_payment %>
    </div>

    <div class="field">
    	<h2><%= f.label :care_needs %><br></h2>
        <%= f.text_field :care_needs %>
    </div>

	<div class="actions">
		<%= f.submit "Save Data",  class: 'button', id: 'submits' %>
	</div>

<%end%>